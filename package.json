{
  "name": "chat-tool-server",
  "version": "1.0.0",
  "description": "Chat management tool",
  "repository": "https://github.com/thaihuynhatquang/chat-tool.git",
  "main": "app.js",
  "moduleRoots": [
    "./src"
  ],
  "nodemonConfig": {
    "ignore": [
      "/app/data/*"
    ]
  },
  "scripts": {
    "start": "yarn migrate && if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "start:dev": "yarn develop",
    "start:prod": "yarn test && yarn lint && yarn flow && yarn build && yarn serve",
    "develop": "DEBUG=app:* nodemon src/bin/www --exec 'node --require babel-register'",
    "build": "babel src/ -d dist/",
    "serve": "node dist/app.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:flush": "sequelize-cli db:migrate:undo:all",
    "seed": "sequelize-cli db:seed:all",
    "test": "jest",
    "lint": "eslint src",
    "flow": "flow"
  },
  "author": "thaihuynhatquang@gmail.com",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.2",
    "babel-jest": "^25.1.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "babel-preset-flow": "^6.23.0",
    "bootbot": "^1.0.16",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "helmet": "^3.21.2",
    "if-env": "^1.0.4",
    "jest": "^25.1.0",
    "jsonwebtoken": "^8.5.1",
    "moment": "^2.24.0",
    "mysql2": "^2.1.0",
    "sequelize": "^4.38.0",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "eslint": "^5.4.0",
    "eslint-config-standard": "^12.0.0-alpha.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.19.1",
    "prettier-standard": "^8.0.1",
    "regenerator-runtime": "^0.12.1"
  }
}
